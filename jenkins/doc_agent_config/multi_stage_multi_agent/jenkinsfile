pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
    stage('Java Hello-World') {
      agent {
        docker { image 'node:17-alpine' }
      }
      steps {
        sh 'javac HelloWorld.java;java HelloWorld'
      }
    }
  }
}
